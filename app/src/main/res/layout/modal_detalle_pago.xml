<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/estilos_detalle_pago">

    <LinearLayout
        android:id="@+id/contenedorDetallePago"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:padding="30dp"
        android:background="@drawable/background_detalle_pago"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textTitulo"
            android:gravity="center_horizontal"
            android:text="Detalle del pago"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textEstado"
            android:gravity="center_horizontal"
            android:text="Estado: --"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textFecha"
            android:gravity="center_horizontal"
            android:text="Fecha: --"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textNombre"
            android:gravity="center_horizontal"
            android:text="Nombre Socio: --"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textDocumento"
            android:gravity="center_horizontal"
            android:text="Documento: --"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textActividades"
            android:gravity="center_horizontal"
            android:text="Actividades: --"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textMonto"
            android:gravity="center_horizontal"
            android:text="Monto: --"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnImprimir"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_buttons"
        android:text="IMPRIMIR"
        app:layout_constraintTop_toBottomOf="@id/contenedorDetallePago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>