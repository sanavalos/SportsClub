<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.RegSocio"
        android:background="@drawable/gradient_background">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="48dp"
            android:contentDescription="@string/alt_logo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/club_deportivo8_1_removebg_preview" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_secondary"

            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <TextView
                android:id="@+id/bienvenidaUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:text="@string/secondary_no_socio"
                android:textColor="@color/textSecondary"
                android:textSize="22sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="@+id/toolbar" />

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/backMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:srcCompat="@drawable/arrow_back" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nombre_no_socio"
            style="@style/Base.Theme.SportsClub"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:hint="@string/nombre_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_form"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:minHeight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/apellido_no_socio"
            style="@style/Base.Theme.SportsClub"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="@string/apellido_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre_no_socio">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_form"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:minHeight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/celular_no_socio"
            style="@style/Base.Theme.SportsClub"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="@string/celular_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apellido_no_socio">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_form"
                android:fontFamily="@font/roboto"
                android:inputType="phone"
                android:minHeight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/domicilio_no_socio"
            style="@style/Base.Theme.SportsClub"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="@string/domicilio_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/celular_no_socio">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_form"
                android:fontFamily="@font/roboto"
                android:minHeight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipoDoc_no_socio"
            style="@style/Base.Theme.SportsClub"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/domicilio_no_socio">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteDocNoSocio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:hint="@string/tipo_doc_form"
                android:background="@drawable/background_form"
                android:fontFamily="@font/roboto"
                android:textStyle="italic"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/numDoc_no_socio"
            style="@style/Base.Theme.SportsClub"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="@string/dni_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipoDoc_no_socio">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_form"
                android:fontFamily="@font/roboto"
                android:inputType="number"
                android:minHeight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkBoxNoSocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/apto_fisico_form"
            android:textColor="@color/text"
            android:buttonTint="@color/text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numDoc_no_socio" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/regNoSocioButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_buttons"
            android:text="@string/registrar_no_socio"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxNoSocio" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/regNoSocioButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>